!!!
%html{:lang => "en"}
  %head
    - if @post
      %title
        = @post.title
        | Sunwoo Yang
    - else
      %title Ideas to Customers | Sunwoo Yang
    = stylesheet_link_tag    "application", media: "all"
    %link{ rel: 'stylesheet', type: 'text/css', href: 'animate.css' }
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "Ada", :name => "description"}/
    %meta{:content => "Paul Laros", :name => "author"}/
    %link{:href => "favicon.ico", :rel => "shortcut icon"}/
    %title Ada
    / Fonts
    %link{:href => "https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,700italic,800,800italic,700,600italic", :rel => "stylesheet"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Merriweather", :rel => "stylesheet"}/
    / HTML5 shiv for IE8 support
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  %body
    .loading
    #header
      .top
        .search
          %form{:role => "form"}
            .form-group.has-feedback
              %input.form-control.input-sm{:placeholder => "Search..", :type => "text"}/
              %i.form-control-feedback.fa.fa-search
        %a.brand{:href => "/"}
          %span Sunwoo
        .slogan 
          Blog on 
          %span.tag #software, 
          %span.tag #entrepreneurship 
          &
          %span.tag #travel
      %nav.navbar.navbar-ada{:role => "navigation"}
        .navbar-header
          %button.navbar-toggle{"data-target" => "#navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        #navbar-collapse-1.collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Tags
                %span.caret
              %ul.dropdown-menu.active
                - Post.tag_counts.each do |tag|
                  %li
                    = link_to tag.name, tag_path(tag.name)
            %li
              = link_to 'About Me', about_path
            %li
              = link_to 'My Projects', projects_path
            %li
              = link_to 'Contact', contact_path

    - if flash[:alert]
      %p.flash-error= flash[:alert]
    - if flash[:notice]
      %p.flash-notice= flash[:notice]
    = yield

    #footer
    #subscribe
      .container
        .form-inline
          .form-group
            %p Stay updated on latest updates
          .form-group
            = form_for(Subscriber.new) do |f|
              .input-group
                = f.text_field :email, class: 'form-control'
                %span.input-group-btn
                  = f.submit "Subscribe", class: 'btn'
    #links
      .container
        .col-sm-2
          %p.brand
            %span Sunwoo
        .col-sm-8
          %ul.list-inline
            %li
              %a{:href => "/"} Home
            %li
              %a{:href => "/about"} About
            %li
              %a{:href => "/contact"} Contact
        .col-md-2
          %ul.list-inline
            %li
              %a{:href => "#"}
                %i.fa.fa-facebook
            %li
              %a{:href => "#"}
                %i.fa.fa-twitter
            %li
              %a{:href => "#"}
                %i.fa.fa-instagram
  %a#scroll-to-top
    %i.fa.fa-angle-up

