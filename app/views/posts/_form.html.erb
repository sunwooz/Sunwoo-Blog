<div class="row">
  <div class="col-md-8 col-md-offset-1">

<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :content %><br>
  <%= f.text_area :content, :cols => "140", :rows => "20" %>
  <br>
  <%= f.submit "Post!" %>
<% end %>

  </div>
</div>