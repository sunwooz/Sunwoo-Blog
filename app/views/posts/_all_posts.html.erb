

<div class="container home-container">
    <div class="row">

    <div id="menu">
      <ul>
        <li><i class="entypo-home"></i><a href="/">Home</a></li>
      </ul>
    </div>

        <div class="sidebar col-md-5 col-sm-12">

          <span class="menu-trigger side-writer-icon animated fadeInDown">
              <span class="bar"></span>
              <span class="bar"></span>
              <span class="bar"></span>
          </span>

          <!-- if the user has javascript disabled they can still use the menu -->
          <noscript>
              <div class="no-js-menu">
                  <ul>
                      <li><i class="entypo-home"></i><a href="#">Home</a></li>
                      <li><i class="entypo-chart-area"></i><a href="dashboard.html">Stats</a></li>
                  </ul>
              </div>
          </noscript>
          <!-- end no script -->

          <div class="site-info">
              <div class="primary-info">
              <h1>Sunwoo Yang</h1>
                <p>I write about software, entrepreneurship, travel and post notes on all the books I read.</p>
              </div>
              <!-- <div class="secondary-info">

                  <p><a class="btn btn-writer btn-post" href="#"><i class="entypo-doc-text"></i>Join Us</a> or <a href="#">Share your story</a></p>
              </div> -->
          </div>

        </div>

        <div class="col-md-7 col-sm-12 col-md-offset-5 main-content">

          <div class="nav">
            <a href="#" class="select-posts active">All Posts</a>
            <a href="#" class="select-categories">Book Reviews</a>
          </div>

          <div class="home-page-posts animated fadeIn">

          <% @posts.each do |post| %>
            <div class="post">
              <section>
                <div class="post-preview col-xs-10 no-gutter">

                  <h2><%= link_to post.title, post %></h2>

                  <p class="meta">
                    <a class="" href="/about">Sunwoo Yang</a><!--  in <a class="" href="category.html">Storytime</a> --> <i class="link-spacer"></i> <i class="entypo-bookmark"></i> <%= (post.content.split.size / 200.0).ceil %> minutes to read
                  </p>
                </div>

                <div class=" col-xs-2  no-gutter">
                  <%= image_tag "profile-1.jpg", class: "user-icon user-1" %>
                </div>

              </section>
            </div>
          <% end %>
            
        </div><!-- Home page posts -->

        <div class="home-page-categories hide animated fadeIn ">
          <% @book_reviews.each do |book_review| %>
            <div class="category row">
              <section>

                <div class="category-preview col-xs-6 col-sm-4">
                  <h2><%= book_review.name %></h2>
                  <%= link_to image_tag(book_review.image.url), book_review %>
                </div>

              </section>
            </div>
          <% end %>
        </div>
        
        <div class="home-footer">
          <i class="link-spacer"></i>
        </div>

        </div><!-- main content -->

    </div> <!--/row -->

</div> <!-- /container -->

