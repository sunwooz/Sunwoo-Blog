- @posts.each do |post|
  #posts.container
    %section.col-md-12.wow.fadeIn
      .post.big
        .row
          .col-md-6.media
            = image_tag(post.image.url(:large), class: 'img-responsive')
          .col-md-6.caption
            %span.post-tag
              -post.tag_list.each do |tag|
                = link_to "#" + tag, tag_path(tag)

            = link_to post.title, post, class: 'post-title'
            %span.post-date= post.created_at
            %p.post-description
              = raw post.short
              = link_to 'read more...', post
            - if current_user && current_user.email == 'yangsunwoo@gmail.com'
              = link_to 'Edit', edit_post_path(post)
              = link_to 'Destroy', post_path(post), method: :delete, confirm: 'Are you sure?'

